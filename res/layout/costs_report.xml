<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:id="@+id/TotalCaption" android:layout_gravity="left"
                android:textSize="20dp" android:textStyle="bold" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 RUR"
                android:id="@+id/totalVal" android:layout_gravity="right"
                android:textStyle="bold" android:textSize="20dp" android:autoText="false" android:gravity="right"/>
    </LinearLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/places"/>
    <ListView android:id="@+id/places" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>