<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Processing..."
            android:id="@+id/textView"
            android:max="100" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:gravity="center_horizontal" android:layout_marginLeft="15dp"/>

    <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/smsProcessingProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_below="@+id/textView" android:layout_marginBottom="10dp" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <TextView
            android:id="@+id/smsProcessingProgressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/smsProcessingProgressBar"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>